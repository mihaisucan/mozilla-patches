+function test()
+{
+  ok(InspectorUI, "InspectorUI variable exists");
+  ok(!InspectorUI.inspecting, "Inspector is not highlighting");
+  is(InspectorStore.length, 0, "InspectorStore is empty");
+  is(typeof InspectorStore.store, "object",
